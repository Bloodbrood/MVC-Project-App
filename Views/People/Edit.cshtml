@model ProjectApp.Models.Person

@{
    ViewData["Title"] = "Upravit";
    var originalIdentityUserId = ViewData["OriginalIdentityUserId"] as string;
    var personId = Context.Request.Query["personId"];
}

<h1>Upravit</h1>

<h4>Osobu</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <input type="hidden" asp-for="Id" />
            </div>
            <div class="form-group">
                <input type="hidden" asp-for="IdentityUserId" value="@originalIdentityUserId" />
            </div>
            <div class="form-group">
                <label asp-for="Jmeno" class="control-label"></label>
                <input asp-for="Jmeno" class="form-control" />
                <span asp-validation-for="Jmeno" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Prijmeni" class="control-label"></label>
                <input asp-for="Prijmeni" class="form-control" />
                <span asp-validation-for="Prijmeni" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="TelefoniCislo" class="control-label"></label>
                <input asp-for="TelefoniCislo" class="form-control" />
                <span asp-validation-for="TelefoniCislo" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Email" class="control-label"></label>
                <input asp-for="Email" class="form-control" />
                <span asp-validation-for="Email" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Mesto" class="control-label"></label>
                <input asp-for="Mesto" class="form-control" />
                <span asp-validation-for="Mesto" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Ulice" class="control-label"></label>
                <input asp-for="Ulice" class="form-control" />
                <span asp-validation-for="Ulice" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="CisloPopisne" class="control-label"></label>
                <input asp-for="CisloPopisne" class="form-control" />
                <span asp-validation-for="CisloPopisne" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="PSC" class="control-label"></label>
                <input asp-for="PSC" class="form-control" />
                <span asp-validation-for="PSC" class="text-danger"></span>
            </div>

            <div class="form-group">
                <input type="submit" value="Uložit změny" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Zpět na Seznam</a>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
